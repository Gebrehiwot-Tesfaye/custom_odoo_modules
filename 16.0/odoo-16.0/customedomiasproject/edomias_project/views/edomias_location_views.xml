<odoo>

     <record id="view_edomias_location_tree" model="ir.ui.view">
        <field name="name">edomias.location.tree</field>
        <field name="model">edomias.location</field>
        <field name="arch" type="xml">
            <tree string="Edomias Locations">
                <field name="name"/>
                <field name="position"/>
                <field name="employment_rate"/>
                <field name="edomias_rate"/>
            </tree>
        </field>
    </record>

    <record id="view_edomias_location_form" model="ir.ui.view">
        <field name="name">edomias.location.form</field>
        <field name="model">edomias.location</field>
        <field name="arch" type="xml">
            <form string="Edomias Location">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="position"/>
                        <field name="employment_rate"/>
                        <field name="edomias_rate"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <!-- Action for Addis Ababa -->
    <record id="action_edomias_location_addis_ababa" model="ir.actions.act_window">
        <field name="name">Addis Ababa Locations</field>
        <field name="res_model">edomias.location</field>
        <field name="view_mode">tree,form,kanban</field>
        <field name="domain">[('name', '=', 'addis_ababa')]</field>
    </record>

    <!-- Action for Bahirdar -->
    <record id="action_edomias_location_bahirdar" model="ir.actions.act_window">
        <field name="name">Bahirdar Locations</field>
        <field name="res_model">edomias.location</field>
        <field name="view_mode">tree,form,kanban</field>
        <field name="domain">[('name', '=', 'bahirdar')]</field>
    </record>

    <!-- Similar actions for Adama, Hawasa, and Jima -->
    <record id="action_edomias_location_adama" model="ir.actions.act_window">
        <field name="name">Adama Locations</field>
        <field name="res_model">edomias.location</field>
        <field name="view_mode">tree,form,kanban</field>
        <field name="domain">[('name', '=', 'adama')]</field>
    </record>

    <record id="action_edomias_location_hawasa" model="ir.actions.act_window">
        <field name="name">Hawasa Locations</field>
        <field name="res_model">edomias.location</field>
        <field name="view_mode">tree,form,kanban</field>
        <field name="domain">[('name', '=', 'hawasa')]</field>
    </record>

    <record id="action_edomias_location_jima" model="ir.actions.act_window">
        <field name="name">Jima Locations</field>
        <field name="res_model">edomias.location</field>
        <field name="view_mode">tree,form,kanban</field>
        <field name="domain">[('name', '=', 'jima')]</field>
    </record>
</odoo>
