<odoo>
    <!-- Tree View -->
    <record id="view_edomias_project_tree" model="ir.ui.view">
        <field name="name">edomias.project.tree</field>
        <field name="model">edomias.project</field>
        <field name="arch" type="xml">
            <tree string="Edomias Projects">
                <field name="name"/>
                <field name="client_name"/>
                <field name="start_date"/>
                <field name="end_date"/>

            </tree>
        </field>
    </record>

    <!-- Form View -->
       <!-- Form View -->
    <record id="view_edomias_project_form" model="ir.ui.view">
        <field name="name">edomias.project.form</field>
        <field name="model">edomias.project</field>
        <field name="arch" type="xml">
            <form string="Edomias Project">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="client_name"/>
                        <field name="start_date"/>
                        <field name="end_date"/>
                    </group>
                    <notebook>
                        <page string="Locations">
                            <field name="location_ids">
                                <tree string="Locations">
                                    <field name="name"/>
                                    <field name="position"/>
                                    <field name="employment_rate"/>
                                    <field name="edomias_rate"/>
                                    <field name="total_rate"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>


    <!-- Kanban View -->
    <record id="view_edomias_project_kanban" model="ir.ui.view">
        <field name="name">edomias.project.kanban</field>
        <field name="model">edomias.project</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="name"/>
                <field name="client_name"/>
                <field name="start_date"/>
                <field name="end_date"/>
            </kanban>
        </field>
    </record>

    <!-- Actions -->
    <record id="action_edomias_project" model="ir.actions.act_window">
        <field name="name">Edomias Projects</field>
        <field name="res_model">edomias.project</field>
        <field name="view_mode">tree,form,kanban</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create and manage Edomias Projects
            </p>
        </field>
    </record>

    <!-- Menu Items -->
    <menuitem id="menu_edomias_root" name="Edomias Project" sequence="1"/>

    <menuitem id="menu_edomias_project" name="Projects" parent="menu_edomias_root" sequence="2" action="action_edomias_project"/>
</odoo>
