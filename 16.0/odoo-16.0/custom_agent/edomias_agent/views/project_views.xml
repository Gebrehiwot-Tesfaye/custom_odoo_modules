<odoo>
    <!-- Tree view for Projects -->
    <record id="view_project_tree" model="ir.ui.view">
        <field name="name">agent.project.tree</field>
        <field name="model">agent.project</field>
        <field name="arch" type="xml">
           <tree>
                <field name="client"/>
                <field name="name"/>
                <field name="description"/>
               <field name="modality"/>

                <field name="admin_cost" optional="show"/>
                <field name="renewal_date"/>
                <field name="is_cost_plus" optional="show"/>
                <field name="start_date" widget="date" optional="show"/>
                <field name="end_date" widget="date" optional="show" />
            </tree>
        </field>
    </record>


   <record id="view_project_form" model="ir.ui.view">
    <field name="name">agent.project.form</field>
    <field name="model">agent.project</field>
    <field name="arch" type="xml">
        <form>
     <header>
                    <!-- Button to open the form view for creating a new renewal -->
                    <button name="%(action_renewal_form_modal)d" string="New Renewal" type="action" class="btn-primary" icon="fa-calendar"/>

                    <!-- Button to open the tree view of existing renewals -->
                    <button name="%(action_renewal_tree_modal)d" string="Renewal List" type="action" class="btn-secondary" icon="fa-list">
                        <field name="renewal_count" widget="statinfo" string="Renewals"/>
                    </button>
                </header>

            <sheet>
                <group>
                    <group>
                         <field name="client"/>
                        <field name="name" required="1"/>
                        <field name="description"/>
                          <field name="start_date"/>
                        <field name="end_date"/>


                    </group>

                    <group>
                            <field name="modality"/>

                            <field name="renewal_date"/>
                            <field name="admin_cost"/>
                            <field name="agreement"/>
                            <field name="is_cost_plus"/>
                            <field name="profit_margin_percentage" attrs="{'invisible': [('is_cost_plus', '=', False)]}"/>
                        </group>
                </group>
             <notebook>
    <!-- Tree view for Edomias Agents -->
    <page string="Edomias Agents">
        <field name="agent_ids" widget="many2many_list">
            <tree editable="bottom">
                <!-- These fields will be shown by default -->
                <field name="location_id" string="Location" width="150"/>
                <field name="job_id" string="Job Position" width="150"/>
                <field name="edomias_rate" required="1" string="Edomias Rate" width="150"/>
                <field name="employee_rate" required="1" string="Employee Rate" width="150"/>
                <field name="Number_of_Man_Power" string="Number of Man Power" width="150"/>

                <!-- Optional Allowance fields -->
                <field name="hra" string="HRA (Housing Rent Allowance)" optional="show" width="150"/>
                <field name="da" string="DA (Dearness Allowance)" optional="show" width="100"/>
                <field name="travel_allowance" string="Travel Allowance" optional="show" width="100"/>
                <field name="meal_allowance" string="Meal Allowance" optional="show" width="100"/>
                <field name="medical_allowance" string="Medical Allowance" optional="show" width="100"/>
                <field name="other_allowance" string="Other Allowance" optional="show" width="100"/>
            </tree>
        </field>
    </page>
</notebook>

            </sheet>
        </form>
    </field>
</record>


 <record id="view_project_kanban" model="ir.ui.view">
    <field name="name">agent.project.kanban</field>
    <field name="model">agent.project</field>
    <field name="arch" type="xml">
        <kanban class="o_kanban_small_column">
            <field name="name"/>
            <field name="description"/>
            <field name="start_date"/>
            <field name="end_date"/>

            <templates>
                <t t-name="kanban-box">
                    <div class="oe_kanban_global_click">
                        <div class="o_kanban_record">
                            <div class="o_kanban_primary_upper">
                                <strong><field name="name"/></strong>
                            </div>
                            <div>
                                <span><b>Description:</b> <field name="description"/></span>
                            </div>
                            <div>
                                <span><b>Start Date:</b> <field name="start_date"/></span>
                            </div>
                            <div>
                                <span><b>End Date:</b> <field name="end_date"/></span>
                            </div>
                        </div>
                    </div>
                </t>
            </templates>
        </kanban>
    </field>
</record>


    <!-- Action for Projects -->
    <record id="action_project" model="ir.actions.act_window">
        <field name="name">Projects</field>
        <field name="res_model">agent.project</field>
        <field name="view_mode">tree,form,kanban</field>
         <!-- Order by created date in descending order -->
    <field name="context">{'search_default_order': 'create_date desc'}</field>
        <field name="view_id" ref="view_project_tree"/>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Click to create a new project.
            </p>
        </field>
    </record>

