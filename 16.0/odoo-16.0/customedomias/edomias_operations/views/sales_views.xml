<!-- edomias_operation/views/sales_views.xml -->

<odoo>
    <record id="view_sales_order_tree" model="ir.ui.view">
        <field name="name">sales.order.tree</field>
        <field name="model">my_module.sales_order</field>
        <field name="arch" type="xml">
            <tree>
                <field name="client_id"/>
                <field name="project_id"/>
                <field name="location"/>
            </tree>
        </field>
    </record>

    <record id="view_sales_order_form" model="ir.ui.view">
        <field name="name">sales.order.form</field>
        <field name="model">my_module.sales_order</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="client_id"/>
                        <field name="project_id"/>
                        <field name="location"/>
                        <field name="contract_info"/>
                        <field name="service_ids"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <odoo>
    <!-- Action to Open Sales Order Views -->
    <record id="action_sales_order" model="ir.actions.act_window">
        <field name="name">Sales Orders</field>
        <field name="res_model">my_module.sales_order</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new Sales Order
            </p>
        </field>
    </record>


</odoo>


