<!-- edomias_operation/views/payroll_views.xml -->

<odoo>
    <record id="view_payroll_tree" model="ir.ui.view">
        <field name="name">payroll.tree</field>
        <field name="model">my_module.payroll</field>
        <field name="arch" type="xml">
            <tree>
                <field name="employee_id"/>
                <field name="project_id"/>
                <field name="total_pay"/>
            </tree>
        </field>
    </record>

    <record id="view_payroll_form" model="ir.ui.view">
        <field name="name">payroll.form</field>
        <field name="model">my_module.payroll</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="employee_id"/>
                        <field name="project_id"/>
                        <field name="earning"/>
                        <field name="deduction"/>
                        <field name="total_pay"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <menuitem id="menu_payroll_root" name="Payroll" sequence="3"/>
    <menuitem id="menu_payroll" name="Payroll" parent="menu_payroll_root" action="action_payroll"/>
</odoo>
