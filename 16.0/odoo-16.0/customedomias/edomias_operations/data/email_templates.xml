<odoo>
    <data>
        <record id="new_project_email_template" model="mail.template">
            <field name="name">New Project Notification</field>
            <field name="model_id" ref="my_module.project"/>
            <field name="subject">New Project Created</field>
            <field name="email_from">${(user.email or '')|safe}</field>
            <field name="email_to">${object.email_recipients or ''}</field>
            <field name="body_html">
                &lt;p&gt;A new project named &lt;b&gt;${object.name}&lt;/b&gt; has been created.&lt;/p&gt;
            </field>
        </record>
    </data>
</odoo>
