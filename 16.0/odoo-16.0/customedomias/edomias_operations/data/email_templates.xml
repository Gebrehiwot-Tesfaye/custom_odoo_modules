<!-- edomias_operation/data/email_templates.xml -->

<odoo>
    <record id="new_project_email_template" model="mail.template">
        <field name="name">New Project Notification</field>
        <field name="model_id" ref="my_module.model_project"/>
        <field name="subject">New Project Created: ${object.name}</field>
        <field name="email_from">${(user.email or '')|safe}</field>
        <field name="email_to">hr.manager@example.com, finance.manager@example.com</field>
        <field name="body_html"><![CDATA[
            <p>Dear Managers,</p>
            <p>A new project has been created:</p>
            <ul>
                <li>Project Name: ${object.name}</li>
                <li>Client: ${object.client_id.name}</li>
                <li>Contract Period: ${object.contract_start_date} - ${object.contract_end_date}</li>
            </ul>
        ]]></field>
    </record>
</odoo>
